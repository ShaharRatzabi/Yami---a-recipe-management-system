<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.CreateRecipeStep4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="658dp"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        tools:context=".fragments.CreateRecipeStep1">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logoutBtnStep1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:autoText="false"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/step_back"
                android:paddingLeft="12dp"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewNameHpCard"
                android:layout_width="321dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:text="Create your own recipe"
                android:textAppearance="@style/TextBlack"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewOverview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="OVERVIEW"
                android:textColor="#777070" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="INGREDIENTS"
                android:textColor="#777070" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="STEPS"
                android:textColor="#777070" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="IMAGE"
                android:textColor="#EF6C00"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="397dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_custom"
            app:cardCornerRadius="30dp"
            app:cardElevation="20sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="301dp"
                    android:layout_height="276dp"
                    android:layout_margin="20sp"
                    tools:src="@tools:sample/avatars" />

                <Button
                    android:id="@+id/addImageBtn"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginRight="30dp"
                    android:backgroundTint="#FFA500"
                    android:drawableLeft="@drawable/add_image" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFA500"
            android:text="Confirm"
            android:textColor="#000000"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBtnStep4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/home_icon"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Home"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/searchBtnStep4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/search_logo"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Search"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/CreateBtnStep4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/plus_icon"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Create"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/accountBtnStep4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/person_icon"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Account"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>