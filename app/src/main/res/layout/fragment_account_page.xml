<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.AccountPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="647dp"
        android:background="@drawable/white_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/logoutBtnAccount"
                android:layout_width="54dp"
                android:layout_height="45dp"
                android:backgroundTint="#FFFFFF"
                android:drawableLeft="@drawable/logout"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="171dp"
                android:layout_height="41dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/yummy_logo_transparent_without_slogan" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewAccountName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="Hello"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFromApi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your own recipes" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewYourOwn"
            android:layout_width="match_parent"
            android:layout_height="233dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <Button
            android:id="@+id/homeBtnAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/home_icon"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Home"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/searchBtnAcount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/search_logo"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Search"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/createBtnAcount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/plus_icon"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Create"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/search_logo"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Search"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/AccountBtnAccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:autoText="false"
            android:backgroundTint="#FFFFFF"
            android:drawableTop="@drawable/person_icon"
            android:includeFontPadding="false"
            android:padding="10dp"
            android:text="Account"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>